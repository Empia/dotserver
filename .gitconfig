[core]
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  whitespace = fix,space-before-tab,tab-in-indent,trailing-space
  editor = /usr/bin/vim
[apply]
  whitespace = fix
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green
  changed = yellow
  untracked = cyan  
[branch]
  autosetupmerge = true	
[merge]
	log = true
[push]
	# Push current branch even if you've never pushed it before
	default = current
[alias]
	merge = merge --no-ff
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
